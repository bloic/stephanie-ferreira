{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | {{ article.title }}{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('blogDetail') }}
{% endblock %}
{% block body %}
    <div class="container pt-5">
        <div class="card mb-3">
            <h5 class="card-title text-center m-3">{{ article.title }}</h5>
            <div class="row g-0">
                <div class="col-md-4">
                    <img src="{{ article.picture }}" class="img-fluid rounded-start" alt="...">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <p class="card-text">{{ article.content }}</p>
                        <p class="card-text"><small class="text-muted">
                                {{ article.date | format_datetime('full','short', locale='fr') }}</small>
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <div class="d-flex flex-column mx-4">
            {%  include('commentary/_form.html.twig') with {'label_button': 'Valider' }%}
        </div>
        <div>
            {{ dump(commentaries) }}
            {% for commentary in commentaries %}
                <p> {{ commentary.content }}</p>
            {% endfor%}
        </div>
    </div>

{% endblock %}