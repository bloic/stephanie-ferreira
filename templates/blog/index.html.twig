{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | blog{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row d-flex">
            <div class="position-absolute home-title d-flex align-items-center justify-content-center">
                <h1 class="text-center d-flex flex-column">Blog</h1>
            </div>
            <div class="position-relative d-flex justify-content-center">
                <img src="https://via.placeholder.com/1440x300" alt="">
            </div>
        </div>
        <h2 class="text-center m-5">Liste des Articles</h2>
        <div class="row justify-content-center">
            {% for article in articles %}
                <div class="card mb-3 col-lg-8">
                    <div class="row g-0">
                        <div class="col-md-4">
                            <img src="{{ article.picture }}" class="img-fluid rounded-start" alt="...">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title">Card title</h5>
                                <p class="card-text">{{ article.content }}</p>
                                <p class="card-text">{{ article.user.email }}</p>
                                <p class="card-text">
                                    <small class="text-muted">{{ article.date |format_datetime('full','short',locale='fr') }}</small>
                                </p>
                            </div>
                            <div class="d-flex justify-content-end">
                                <a href="#" class="btn btn-outline-primary">en savoir plus</a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
